[sub_resource type="Shader" id="Shader_ui_background_gradient"]
code = "shader_type canvas_item;\n\nvoid fragment() {\n\tvec2 uv = UV;\n\tvec3 base = vec3(0.082, 0.086, 0.102);\n\tvec3 deep_blue = vec3(0.035, 0.094, 0.235);\n\tvec3 mid_blue = vec3(0.095, 0.165, 0.310);\n\tvec3 slate = vec3(0.120, 0.170, 0.240);\n\n\tfloat diagonal = clamp(1.0 - abs((uv.x * 1.15 + (1.0 - uv.y) * 0.9) - 0.95), 0.0, 1.0);\n\tdiagonal = smoothstep(0.0, 1.0, diagonal);\n\tfloat top_glow = pow(1.0 - uv.y, 1.8);\n\tfloat left_glow = pow(1.0 - uv.x, 2.3);\n\tvec2 center_delta = (uv - vec2(0.56, 0.45)) * vec2(1.05, 0.9);\n\tvec2 top_left_delta = (uv - vec2(0.18, 0.10)) * vec2(1.4, 0.9);\n\tfloat center_bloom = exp(-14.0 * dot(center_delta, center_delta));\n\tfloat top_left_bloom = exp(-18.0 * dot(top_left_delta, top_left_delta));\n\n\tvec3 col = base;\n\tcol = mix(col, slate, 0.28 * top_glow);\n\tcol += deep_blue * (0.42 * diagonal + 0.22 * top_left_bloom);\n\tcol += mid_blue * (0.22 * center_bloom + 0.12 * top_glow + 0.10 * left_glow);\n\n\tfloat vignette = smoothstep(0.95, 0.2, length((uv - vec2(0.5)) * vec2(1.35, 1.05)));\n\tcol *= (1.0 - 0.14 * vignette);\n\tCOLOR = vec4(col, 1.0);\n}\n"

